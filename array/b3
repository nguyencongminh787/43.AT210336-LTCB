#include<stdio.h>
int main(){
    int n;
    int sum = 0 ,suma = 0, sumd = 0,count = 0,counta=0,countd=0;
    scanf("%d",&n);
    int arr[n];
    for(int i = 0; i<n;i ++){
        scanf("%d", &arr[i]);
        sum+=arr[i];
        count++;
    if(arr[i]<0){
        suma+=arr[i];
        counta++;
    }else{
        sumd+=arr[i];
        countd++;}}
        printf("tổng các phần dương là : %d\n",suma);
            printf("tổng tất cả là :%d\n", sum);
             printf("tổng các phần âm là : %d\n",sumd);
             printf("trung bình cộng tất cả  là: %.2f\n", 1.0*sum/count);
             printf("trung bình cộng dương là : %.2f\n", 1.0*sumd/countd);
             printf("trung bình cộng âm là: %.2f\n", 1.0*suma/counta);
}
