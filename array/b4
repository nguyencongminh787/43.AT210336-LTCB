#include <stdio.h>
int main(){
    int n;
    int max, vitri;
    scanf("%d",&n);
    int arr[n];
    for(int i = 0; i<n; i++){
        scanf("%d", &arr[i]);
    }
    max = arr[0];
    vitri = 0;
    for(int i = 1; i<n; i ++){
        if (arr[i]>arr[0]){
            max = arr[i];
            vitri = i;
        }
    }printf("số lớn nhất là : %d\n", max);
printf("ở vị trí số : %d\n", vitri);
}
